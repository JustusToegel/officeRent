<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "office_rent.jpeg" %>);">
  <h1 class="title">Discover OfficeRent!</h1>
  <p>Your Solution for Finding the Perfect Office Space.</p>
  <p>- Explore a wide variety of office spaces.</p>
  <p>- Find places that fit your budget and needs.</p>
  <p>- Easy to use and hassle-free.</p>
</div>

<div class="cards-grid">
  <% @flats.each do |flat| %>
      <div class="card">
          <% if flat.photo.attached? %>
            <div class="card_form-image">
              <%= cl_image_tag flat.photo.key, height: 300, width: 300, crop: :fill %>
              <span><%= flat.address %></span>
            </div>
          <% else   %>
            <div class="card_form">
                <span><%= flat.address %></span>
            </div>
          <% end %>

        <div class="card_data">
          <div style="display: flex" class="data">
            <div class="text">
              <label class="text_m">Flat to share!</label>
              <div class="cube text_s">
                <label class="side front" ><%= flat.price %>â‚¬</label>
                <label class="side top"><%= flat.name %></label>
              </div>
            </div>
          </div>
          <span title="Acceder a la lista (Temas)"><%= link_to "Book Now!", flat_path(flat), class: "Btn" %></span>
        </div>
      </div>
  <% end %>
</div>

